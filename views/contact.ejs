<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieAurSeries - Contact</title>
    <link rel="icon" type="image/x-icon" href="/icon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @media (max-width: 576px) {
            h1 { font-size: 2rem; }
            .lead { font-size: 1rem; }
            .btn-lg { font-size: 1rem; padding: 0.75rem; }
        }
    </style>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-70P8XD82JC"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-70P8XD82JC');
</script>
</head>
<body class="bg-light">

<!-- Navbar -->
<%- include('partials/navbar', { currentPage: 'contact' }) %>

<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-12">
            <h1 class="mb-4 text-center">Get In Touch</h1>
            <p class="text-center lead mb-5">
                Have a question, feedback, or a suggestion? We'd love to hear from you!
            </p>

            <!-- Contact Form -->
            <form id="contactForm">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input type="text" class="form-control" id="subject">
                </div>
                <div class="mb-4">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="5" required></textarea>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                </div>
            </form>

            <!-- Success Message -->
            <div id="successMessage" class="alert alert-success mt-4 text-center d-none">
                âœ… Message submitted successfully! Reloading...
            </div>

            <div class="text-center mt-5 p-3 border rounded">
                <p class="mb-0"><b>Direct Email:</b> support@movieaurseries.com</p>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.getElementById("contactForm").addEventListener("submit", function(event) {
        event.preventDefault(); // stop real form submission

        // Show success message
        const successMessage = document.getElementById("successMessage");
        successMessage.classList.remove("d-none");

        // Reload page after 2 seconds
        setTimeout(() => {
            location.reload();
        }, 2000);
    });
</script>
</body>
</html>
