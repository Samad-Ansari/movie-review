<body class="bg-light">

<!-- Navbar -->
<%- include('partials/navbar', { currentPage: 'contact' }) %>

<!-- Main Content -->
<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-12">
            <h1 class="mb-4 text-center">Get In Touch</h1>
            <p class="text-center lead mb-5">
                Have a question, feedback, or suggestion? We'd love to hear from you!
            </p>

            <!-- Contact Form -->
            <form id="contactForm" aria-label="Contact Form">
                <div class="mb-3">
                    <label for="name" class="form-label">Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="name" required aria-required="true">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" id="email" required aria-required="true">
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input type="text" class="form-control" id="subject">
                </div>
                <div class="mb-4">
                    <label for="message" class="form-label">Message <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="message" rows="5" required aria-required="true"></textarea>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                </div>
            </form>

            <!-- Success Message -->
            <div id="successMessage" class="alert alert-success mt-4 text-center d-none" role="alert">
                âœ… Message submitted successfully! Reloading...
            </div>

            <div class="text-center mt-5 p-3 border rounded">
                <p class="mb-0"><strong>Direct Email:</strong> <a href="mailto:support@movieaurseries.com">support@movieaurseries.com</a></p>
            </div>
        </div>
    </div>
</main>

<!-- Footer -->
<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.getElementById("contactForm").addEventListener("submit", function(event) {
        event.preventDefault();

        const successMessage = document.getElementById("successMessage");
        successMessage.classList.remove("d-none");

        setTimeout(() => {
            location.reload();
        }, 2000);
    });
</script>
</body>
