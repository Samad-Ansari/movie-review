<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Preparing File...</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f0f2f5;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
        }
        .card {
            border-radius: 1rem;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            max-width: 500px;
        }
        .counter-box {
            font-size: 4rem;
            font-weight: 700;
            color: #0d6efd;
        }
        .btn-lg {
            min-width: 200px;
            border-radius: 50px;
            font-size: 1.15rem;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .btn-lg:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.2);
        }
        .lead { font-size: 1.1rem; }
        .ready-msg { font-weight: 600; }
        .fade-in { animation: fadeIn 0.8s ease forwards; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
        @media (max-width: 576px) {
            .counter-box { font-size: 3rem; }
            .btn-lg { font-size: 1rem; min-width: 160px; }
        }
    </style><script src="ga.js"></script>

</head>
<body>
    
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="row w-100">
        <div class="col-md-6 col-lg-5 mx-auto">
            <div class="card p-4 text-center">

                <!-- File Preparation Section -->
                <% if (token) { %>
                    <h1 class="card-title mb-4">Preparing Your File...</h1>
                    <p class="lead mb-3">
                        Please wait <span id="counter" class="counter-box">5</span> seconds
                    </p>
                    <div id="btnWrapper" class="mt-3"></div>
                    <p id="readyMessage" class="text-success lead mt-3 d-none ready-msg">
                        Your file is ready! Click the button above to find file.
                    </p>
                    <hr class="my-4">
                    <p class="text-muted small">For security, a short preparation delay is applied.</p>
                <% } else { %>
                    <h2 class="mb-3">Welcome to Your Movie Hub Blog</h2>
                    <p class="text-muted">
                        Discover latest articles, movie updates, and behind-the-scenes stories from the world of cinema.
                    </p>
                <% } %>

            </div>
        </div>
    </div>
</div>


<script>
document.addEventListener("DOMContentLoaded", function () {
    let token = "<%= token %>" || null;
    if (!token) return;

    // Clean URL after redirect
    const cleanPath = window.location.pathname.split("/").slice(0, -2).join("/") || "/";
    window.history.replaceState({}, document.title, cleanPath + "/");

    const counterEl = document.getElementById("counter");
    const btnWrapper = document.getElementById("btnWrapper");
    const readyMsg = document.getElementById("readyMessage");

    // Disable buttons on back navigation
    window.addEventListener("pageshow", function (event) {
        if (event.persisted || performance.getEntriesByType("navigation")[0].type === "back_forward") {
            token = null;
            btnWrapper.innerHTML = "";
            readyMsg.classList.add("d-none");
        }
    });

    if (counterEl && btnWrapper && readyMsg) {
        let timeLeft = 5;
        const timer = setInterval(() => {
            timeLeft--;
            counterEl.textContent = timeLeft;
            if (timeLeft <= 0) {
                clearInterval(timer);
                counterEl.textContent = "0";

                const btn = document.createElement("button");
                btn.innerText = "⬇️ Find File";
                btn.className = "btn btn-primary btn-lg fade-in";
                btn.onclick = function () {
                    fetch(`/file/getting?token=${encodeURIComponent(token)}`)
                        .then(response => response.text())
                        .then(fileLink => {
                            console.log(fileLink);
                            if (!fileLink || fileLink.length < 5) {
                                alert("File link is invalid or unavailable.");
                                return;
                            }
                            const a = document.createElement("a");
                            a.href = fileLink;
                            a.download = fileLink.split("/").pop();
                            document.body.appendChild(a);
                            a.click();
                            a.remove();
                        })
                        .catch(err => {
                            console.error("Error fetching file:", err);
                            alert("Error while preparing file.");
                        });
                };
                btnWrapper.appendChild(btn);
                readyMsg.classList.remove("d-none");
            }
        }, 1000);
    }
});
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
