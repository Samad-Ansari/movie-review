<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <title>MovieAurSeries - File</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-70P8XD82JC"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-70P8XD82JC');
</script>
    <style>
        body {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
        }
        .card {
            border: none;
            border-radius: 1.25rem;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            background-color: #ffffffcc;
            backdrop-filter: blur(5px);
        }
        .title {
            font-weight: 700;
            color: #343a40;
        }
        .btn-file {
            width: 100%;
            border-radius: 50px;
            font-size: 1.1rem;
            padding: 0.75rem;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .btn-file i { margin-right: 8px; }
        .btn-file:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .section-header { margin-bottom: 1rem; }
        .link-card {
            margin-bottom: 1rem;
            padding: 1rem;
            border-radius: 0.75rem;
            background: #f8f9fa;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            transition: transform 0.2s;
        }
        .link-card:hover { transform: translateY(-2px); }
        .text-muted { font-size: 0.95rem; }
        @media (max-width: 576px) {
            .btn-file { font-size: 1rem; padding: 0.6rem; }
            .link-card h5 { font-size: 0.95rem; }
        }
    </style>
</head>
<body>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card p-4 text-center">

                <!-- Content Section -->
                <div th:if="${content != null}">
                    <h2 class="title section-header" th:text="|ðŸŽ¬ ${content.name}|"></h2>
                    <p class="text-muted mb-4">Select a link to find file:</p>

                    <% if (content && content.links && content.links.length > 0) { %>
                    <% content.links.forEach(link => { %>
                        <div class="link-card">
                            <% if (link.link) { %>
                                <button class="btn btn-success btn-file" onclick="generateToken('<%= link.link %>')">  <%= link.title %>
                                </button>
                            <% } %>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-muted">No files available.</div>
                <% } %>

                </div>
            </div>
        </div>
    </div>
</div>

<script th:inline="javascript">
    function generateToken(linkId) {
        const tokenData = { id: linkId };
        const token = JSON.stringify(tokenData);
        const encryptedToken = btoa(token);
        window.location.href = "/file/fetch/" + encryptedToken;
    }

    // Clean URL after redirect
    let token = "<%= token %>" || null;
    if (token) {
        const cleanPath = window.location.pathname.split("/").slice(0, -2).join("/") || "/";
        window.history.replaceState({}, document.title, cleanPath + "/");
    }

    // Disable buttons if user navigates back
    window.addEventListener("pageshow", function(event) {
        if (event.persisted || performance.getEntriesByType("navigation")[0].type === "back_forward") {
            document.querySelectorAll(".btn-file").forEach(btn => {
                btn.removeAttribute("onclick");
                btn.disabled = true;
                btn.innerHTML = "Link Expired";
            });
        }
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
